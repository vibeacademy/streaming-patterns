{
  "name": "streaming-patterns",
  "version": "0.1.0",
  "description": "Educational pattern library for streaming AI/LLM UX patterns",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:check": "npm run build && npm run perf:check",
    "preview": "vite preview",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "test": "NODE_OPTIONS='--max-old-space-size=4096' vitest",
    "test:ui": "NODE_OPTIONS='--max-old-space-size=4096' vitest --ui",
    "test:coverage": "NODE_OPTIONS='--max-old-space-size=4096' vitest --coverage",
    "test:run": "NODE_OPTIONS='--max-old-space-size=4096' vitest run",
    "perf:check": "node scripts/check-bundle-size.js",
    "generate:og-image": "node scripts/generate-og-image.js",
    "worker:dev": "wrangler dev",
    "worker:deploy": "wrangler deploy",
    "worker:tail": "wrangler tail"
  },
  "dependencies": {
    "prismjs": "^1.30.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.5",
    "react-router-dom": "^7.9.5"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251111.0",
    "@eslint/js": "^9.39.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/prismjs": "^1.26.5",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/react-helmet-async": "^1.0.1",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vitejs/plugin-react": "^4.3.3",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.6.1",
    "eslint": "^9.39.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "happy-dom": "^20.0.10",
    "puppeteer": "^24.32.1",
    "typescript": "^5.6.3",
    "vite": "^5.4.11",
    "vitest": "^1.6.1",
    "wrangler": "^4.47.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
