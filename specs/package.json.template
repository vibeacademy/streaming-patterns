{
  "name": "streaming-patterns-library",
  "version": "0.1.0",
  "type": "module",
  "description": "Educational library demonstrating streaming AI/LLM UX patterns",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css,md}\"",

    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",

    "specs": "cucumber-js specs/**/*.feature --require-module ts-node/register --require 'specs/**/*.steps.ts' --require 'specs/support/**/*.ts'",
    "specs:exhibition": "npm run specs -- specs/pattern-exhibition/**/*.feature",
    "specs:infrastructure": "npm run specs -- specs/streaming-infrastructure/**/*.feature",
    "specs:tools": "npm run specs -- specs/developer-tools/**/*.feature",
    "specs:patterns": "npm run specs -- specs/patterns/**/*.feature",
    "specs:chain-of-reasoning": "npm run specs -- specs/patterns/chain-of-reasoning.feature",
    "specs:multi-turn-memory": "npm run specs -- specs/patterns/multi-turn-memory.feature",
    "specs:agent-await-prompt": "npm run specs -- specs/patterns/agent-await-prompt.feature",
    "specs:streaming-validation-loop": "npm run specs -- specs/patterns/streaming-validation-loop.feature",
    "specs:tabular-stream-view": "npm run specs -- specs/patterns/tabular-stream-view.feature",
    "specs:turn-taking-co-creation": "npm run specs -- specs/patterns/turn-taking-co-creation.feature",
    "specs:schema-governed-exchange": "npm run specs -- specs/patterns/schema-governed-exchange.feature",
    "specs:watch": "npm run specs -- --watch",
    "specs:coverage": "c8 npm run specs",
    "specs:html-report": "npm run specs -- --format html:specs/reports/cucumber-report.html",
    "specs:json-report": "npm run specs -- --format json:specs/reports/cucumber-report.json",

    "test:all": "npm run test && npm run specs",
    "test:all:coverage": "npm run test:coverage && npm run specs:coverage",

    "validate": "npm run lint && npm run test:all && npm run build"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^10.0.1",
    "@cucumber/pretty-formatter": "^1.0.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.0.4",
    "c8": "^8.0.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "happy-dom": "^12.10.3",
    "jsdom": "^23.0.1",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vitest": "^1.0.4"
  },
  "cucumber": {
    "default": {
      "requireModule": [
        "ts-node/register"
      ],
      "require": [
        "specs/**/*.steps.ts",
        "specs/support/**/*.ts"
      ],
      "format": [
        "progress-bar",
        "html:specs/reports/cucumber-report.html",
        "json:specs/reports/cucumber-report.json"
      ],
      "formatOptions": {
        "snippetInterface": "async-await"
      },
      "paths": [
        "specs/**/*.feature"
      ],
      "publishQuiet": true
    },
    "exhibition": {
      "paths": [
        "specs/pattern-exhibition/**/*.feature"
      ]
    },
    "infrastructure": {
      "paths": [
        "specs/streaming-infrastructure/**/*.feature"
      ]
    },
    "tools": {
      "paths": [
        "specs/developer-tools/**/*.feature"
      ]
    },
    "patterns": {
      "paths": [
        "specs/patterns/**/*.feature"
      ]
    }
  }
}
